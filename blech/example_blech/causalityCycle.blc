// activity A(x: bool)(y: bool) 
@[EntryPoint]
activity A(x: bool)(y shares x: bool) 
    var z: bool
    var w: bool
    cobegin
        //first write - due to Blech write-before-read policy
        z=x 
    with
        //first write - due to policy-sharing Interface
        y=z;
        w=x;

    end
    await true 
end


activity main () ()
    var x: bool 
    var y: bool 
    run A (x)(x)
end

